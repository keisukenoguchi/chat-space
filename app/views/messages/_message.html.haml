.chat-main__Message-messages{data: {message: {id: message.id}}}
  .chat-main__Message-messages-info
    .chat-main__Message-messages-info-name
      = message.user.name
    .chat-main__Message-messages-info-date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__Message-messages-TextBox
    - if message.content.present?
      %p.chat-main__Message-messages-TextBox-text
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?